<%- layout('./layouts/boilerplate') %>

<% for(let i=(data.length - 1); i>= 0; i--){ %>
    <section class="card shadow p-3 mb-3 bg-body rounded">
        <div class="title">
            <h2>
                <%= data[i].title %>
            </h2>
        </div>
        <div class="description">
            <%= data[i].description %>
        </div>
        <div class='buttons'>
            <form action="/articles/<%= data[i]._id %>?_method=DELETE" method="POST">
                <button class='btn btn-danger button'>Delete</button>
            </form>
            <a class='btn btn-info button' href="/articles/edit/<%= data[i]._id %>">Edit</a>
            <a class='btn btn-primary button' href="/articles/<%= data[i]._id %>">Read More</a>
        </div>
    </section>
    <% } %>