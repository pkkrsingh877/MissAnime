<%- include('partials/meta') %>
<%- include('partials/slider') %>
<%- include('partials/navbar') %>
<main class="container">
    <% for(let i=(data.length - 1); i>= 0; i--){ %>
        <section class="card shadow p-3 mb-3 bg-body rounded">
            <div class="title">
                <h2>
                    <%= data[i].title %>
                </h2>
            </div>
            <div class="description">
                <%= data[i].description %>
            </div>
            <div class='buttons'>
                <a class='btn btn-danger button' href="#">Delete</a>
                <a class='btn btn-info button' href="#">Edit</a>
                <a class='btn btn-primary button' href="/articles/<%= data[i]._id %>">Read More</a>
            </div>
        </section>
        <% } %>
</main>
    </body>
</html>